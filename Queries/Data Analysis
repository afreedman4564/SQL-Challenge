-- 1. List the following details of each employee: employee number, last name, first name, sex, and salary.
SELECT e.emp_no,
e.last_name,
e.first_name,
e.sex,
s.salary
FROM employees as e
JOIN salaries as s
ON e.emp_no = s.emp_no
;

-- 2. List first name, last name, and hire date for employees who were hired in 1986.
		-- DROP VIEW emp_1986;

		-- Create view to test and pull list
		CREATE VIEW emp_1986 AS
		SELECT emp_no,
		first_name AS First,
		last_name AS Last,
		hire_date,
		extract(YEAR from hire_date) AS Year
		FROM employees
		WHERE extract(YEAR from hire_date) = 1986
		;

		-- Test only 1986 hires appear
		SELECT Year, COUNT(emp_no)
		FROM emp_1986
		GROUP BY Year
		;

		-- Create list
		SELECT First AS "First Name",
		Last AS "LAST NAME",
		hire_date AS "Hire Date"
		FROM emp_1986
		;
		
-- 3. List the manager of each department with the following information: 
-- 		- department number
--		- department name
-- 		- employee number
-- 		- last name
--		- first name

SELECT m.dept_no, d.dept_name, e.emp_no, e.last_name, e.first_name
FROM dept_manager AS m
JOIN departments AS d
ON (m.dept_no = d.dept_no)
	JOIN employees AS e
	ON (m.emp_no = e.emp_no)
;

-- 4. List the department of each employee with the following information: employee number, last name, first name, and department name.
SELECT e.emp_no AS "Employee Number",
e.last_name AS "Last Name",
e.first_name AS "First Name",
ds.dept_name AS "Department Name"
FROM employees AS e
JOIN dept_emp as d
ON (e.emp_no = d.emp_no)
	JOIN departments as ds
	ON (d.dept_no = ds.dept_no)
;